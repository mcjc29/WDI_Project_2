<h1><%= user.username %></h1>

<h4><%= user.firstName %></h4>
<h4><%= user.lastName %></h4>

<p><%= user.email %></p>

<a href="/profile/<%= user.id %>/edit" class="btn btn-outline-info button-round">Edit</a>

<form method="POST" action="/profile">
  <input type="hidden" name="_method" value="DELETE">
  <button class="btn btn-outline-info button-round">Delete</button>
</form>
