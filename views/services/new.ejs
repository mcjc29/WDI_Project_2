<form method="POST" action="/services">
  <div class="form-group">
    <label for="name">Name</label>
    <input type="text" name="name" id="name" required>
  </div>
  <h1>Select the services offered<h1>
  <div class="form-check form-check-inline">
    <label class="form-check-label">
      <input class="form-check-input" type="checkbox" id="inlineCheckbox1" value="Domestic & Sexual Abuse" name="category"> Domestic & Sexual Abuse
    </label>
    <label class="form-check-label">
      <input class="form-check-input" type="checkbox" id="inlineCheckbox2" value="Sexual Health" name="category"> Sexual Health
    </label>
    <label class="form-check-label">
      <input class="form-check-input" type="checkbox" id="inlineCheckbox3" value="Pregnancy Support" name="category"> Pregnancy Support
    </label>
  </div>
  <fieldset>
    <legend>Address</legend>
    <div class="form-group">
      <label for="line">Line 1</label>
      <input type="text" name="address[line1]" id="line1" required>
    </div>
    <div class="form-group">
      <label for="line2">Line 2</label>
      <input type="text" name="address[line2]" id="line2">
    </div>
    <div class="form-group">
      <label for="city">City</label>
      <input type="text" name="address[city]" id="city" required>
    </div>
    <div class="form-group">
      <label for="postcode">Postcode</label>
      <input type="text" name="address[postcode]" id="postcode" required>
    </div>

  </fieldset>
  <div class="form-group">
    <label for="image">Image</label>
    <input type="text" name="image" id="image" required>
  </div>
  <div class="form-group">
    <label for="website">Website</label>
    <input type="text" name="website" id="website" required>
  </div>
  <div class="form-group">
    <label for="number">Number</label>
    <input type="text" name="number" id="number" required>
  </div>
  <button class="btn btn-outline-info">Save</button>
</form>
