<div class="large-12 columns">
  <img src="<%= service.image %>" alt="<%= service.name %>">
  <h2><%= service.name %></h2>
  <% if(locals.isAuthenticated && service.belongsTo(user)) { %>
    <a href="/services/<%= service.id %>/edit" class="button">Edit</a>

    <form method="POST" action="/services/<%= service.id %>">
    <input type="hidden" name="_method" value="DELETE">
    <button class="button alert">Delete</button>
    </form>
    <% } %>

    <p>
      <%= service.category %><br>
      <%= service.address.line1 %><br>
      <% if(service.address.line2) { %><%= service.address.line2 %><br><% } %>
      <%= service.address.city %><br>
      <%= service.address.postcode %><br>
      <%= service.website %><br>
      <%= service.number %><br>
    </p>

    <p>
      <% while(service.rating--) { %> &rating; <% } %>

    </p>

    <small>Added by: <%= service.createdBy.username %></small>

        <% if(locals.isAuthenticated) { %>
          <section>
          <h4>Leave a comment</h4>
          <form method="POST" action="/services/<%= service.id %>/comments">
          <textarea name="content" id="content" placeholder="Comment" required maxlength="255"></textarea>
          <button class="button">Leave a comment</button>
          </form>
          </section>
          <% } %>
        </div>
        <section>
          <h4>Comments</h4>
          <% service.comments.forEach((comment) => { %>
            <p><%= comment.content %></p>
            <small><%= comment.createdBy.username %></small>
            <% if(locals.isAuthenticated && comment.belongsTo(user)) { %>
              <form method="POST" action="/services/<%= service.id %>/comments/<%= comment.id %>">
              <input type="hidden" name="_method" value="DELETE">
              <button class="button alert">Delete</button>
              </form>
              <% } %>
              <% }) %>
            </section>

        <% if(locals.isAuthenticated) { %>
          <section>
          <h4>Rate Each Service</h4>
          <form method="POST" action="/services/<%= service.id %>/ratings">

          <label for="rating">Dignity and Respect</label>
          <input type="radio" name="Dignity" value="1" checked> 1
          <input type="radio" name="Dignity" value="2"> 2
          <input type="radio" name="Dignity" value="3"> 3
          <input type="radio" name="Dignity" value="4"> 4
          <input type="radio" name="Dignity" value="5"> 5
          <label for="rating">Quality Of Facilities</label>
          <input type="radio" name="Facilities" value="1" checked> 1
          <input type="radio" name="Facilities" value="2"> 2
          <input type="radio" name="Facilities" value="3"> 3
          <input type="radio" name="Facilities" value="4"> 4
          <input type="radio" name="Facilities" value="5"> 5
          <label for="rating">Quality Of Advice</label>
          <input type="radio" name="Advice" value="1" checked> 1
          <input type="radio" name="Advice" value="2"> 2
          <input type="radio" name="Advice" value="3"> 3
          <input type="radio" name="Advice" value="4"> 4
          <input type="radio" name="Advice" value="5"> 5
          <button class="button">Rate it</button>
          </form>
          </section>
          <% } %>
